import pygame
import sys

Seleccion = 0 
Vida = 1
Rojo = (255, 0, 0)
Blanco = (255, 255, 255)
Cierre = True
pygame.init()

Imagen_Seleccion_Personaje = pygame.image.load("Sint√≠tulo.png")
Imagen_Interrogatorio = pygame.image.load("")
Pantalla = pygame.display.set_mode((1800,800))
pygame.display.set_caption("Juego")

while Seleccion == 0: # La variable es 0, si no tiene un personja asignado a la variable 
      Pantalla.blit(Imagen_Seleccion_Personaje, (0,0))
      pygame.display.flip()
      while Cierre:
            for event in pygame.event.get():
                  if event.type == pygame.QUIT:
                        Cierre == False
                  elif event.type == pygame.KEYDOWN:
                        if event.key == pygame.K_1:
                              Seleccion = Detective



while Vida == 1:  # Este si es el juego 
    Pantalla.blit(Imagen_Interrogatorio, (0,0)) 
    pygame.display.flip()
    while Cierre:
          for event in pygame.event.get():
                if event.type == pygame.QUIT:
                      Cierre == False   
                elif event.type == pygame.KEYDOWN:
                      if event.key == pygame.K_p:
                            pygame.quit()
                      elif event.key == pygame.K_SPACE:
                            pygame.quit()                           
                      
    class Personaje:
            def __init__(self, Inteligencia, Fuerza, Percepcion, Destreza, Velocidad):
                self.Inteligencia = Inteligencia
                self.Fuerza = Fuerza
                self.Percepcion = Percepcion
                self.Destreza = Destreza
                self.Velocidad = Velocidad

    class Detective(Personaje):
            def __init__(self, Inteligencia, Fuerza, Percepcion, Destreza, Velocidad):
                super().__init__(Inteligencia, Fuerza, Percepcion, Destreza, Velocidad)
                Inteligencia = 45
                Fuerza = 10
                Percepcion = 30
                Destreza = 5
                Velocidad = 5

    class Apostador(Personaje):
            def __init__(self, Inteligencia, Fuerza, Percepcion, Destreza, Velocidad):
                super().__init__(Inteligencia, Fuerza, Percepcion, Destreza, Velocidad)
                Inteligencia = 35
                Fuerza = 5
                Percepcion = 40
                Destreza = 45
                Velocidad = 10

    class Politico(Personaje):
            def __init__(self, Inteligencia, Fuerza, Percepcion, Destreza, Velocidad):
                super().__init__(Inteligencia, Fuerza, Percepcion, Destreza, Velocidad)
                Inteligencia = 5
                Fuerza = 0
                Percepcion = 10
                Destreza = 5
                Velocidad = 3

    class Medica(Personaje):
            def __init__(self, Inteligencia, Fuerza, Percepcion, Destreza, Velocidad):
                super().__init__(Inteligencia, Fuerza, Percepcion, Destreza, Velocidad)
                Inteligencia = 25
                Fuerza = 5
                Percepcion = 40
                Destreza = 50
                Velocidad = 20

    class azafata(Personaje):
            def __init__(self, Inteligencia, Fuerza, Percepcion, Destreza, Velocidad):
                super().__init__(Inteligencia, Fuerza, Percepcion, Destreza, Velocidad)
                Inteligencia = 10
                Fuerza = 8
                Percepcion = 14
                Destreza = 28
                Velocidad = 23

    class Deportista(Personaje):
            def __init__(self, Inteligencia, Fuerza, Percepcion, Destreza, Velocidad):
                super().__init__(Inteligencia, Fuerza, Percepcion, Destreza, Velocidad)
                Inteligencia = 8
                Fuerza = 47
                Percepcion = 39
                Destreza = 49
                Velocidad = 36

    class enterevistador:
            def __init__(self, Estado):
                self.Estado = Estado
                Estado = 50

        

